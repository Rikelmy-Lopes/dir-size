{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src"
  ]
}